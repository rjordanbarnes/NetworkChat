<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="270.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="networkchat.MainMenuController">
   <children>
      <Pane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <GridPane layoutX="24.0" layoutY="162.0" prefWidth="200.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="60.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <TextField fx:id="ipBox" onKeyReleased="#checkFields" prefHeight="25.0" prefWidth="139.0" promptText="IP" text="localhost" GridPane.rowIndex="1" />
                  <TextField fx:id="portBox" onKeyReleased="#checkFields" prefHeight="25.0" prefWidth="56.0" promptText="Port" text="9999" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="IP Address" />
                  <Label text="Port" GridPane.columnIndex="1" />
                  <Button fx:id="startButton" alignment="CENTER" mnemonicParsing="false" onAction="#clickStartButton" prefWidth="60.0" text="Connect" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
               </children>
            </GridPane>
            <HBox layoutX="71.0" layoutY="127.0">
               <children>
                  <ToggleButton fx:id="joinToggle" mnemonicParsing="false" onAction="#clickJoinToggle" prefHeight="26.0" prefWidth="53.0" selected="true" text="Join">
                     <toggleGroup>
                        <ToggleGroup fx:id="hostJoinGroup" />
                     </toggleGroup>
                  </ToggleButton>
                  <ToggleButton fx:id="hostToggle" mnemonicParsing="false" onAction="#clickHostToggle" prefHeight="26.0" prefWidth="53.0" text="Host" toggleGroup="$hostJoinGroup" />
               </children>
            </HBox>
            <Group layoutX="26.0" layoutY="128.0">
               <children>
                  <Group layoutY="20.0" />
               </children>
            </Group>
            <VBox layoutX="49.0" layoutY="72.0" spacing="3.0">
               <children>
                  <Label text="Name" />
                  <TextField fx:id="nameBox" onKeyReleased="#checkFields" prefHeight="25.0" prefWidth="149.0" promptText="Name" text="User" />
               </children>
            </VBox>
            <Text layoutY="44.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Network Chat" textAlignment="CENTER" wrappingWidth="250.0">
               <font>
                  <Font size="30.0" />
               </font>
            </Text>
         </children>
      </Pane>
   </children>
</AnchorPane>
