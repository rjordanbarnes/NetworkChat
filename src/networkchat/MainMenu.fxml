<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane id="AnchorPane" prefHeight="560.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="networkchat.MainMenuController">
   <children>
      <Pane prefHeight="560.0" prefWidth="520.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <TextField fx:id="nameBox" layoutX="64.0" layoutY="36.0" promptText="Name" text="Jordan" />
            <ToggleButton fx:id="hostToggle" layoutX="202.0" layoutY="161.0" mnemonicParsing="false" onAction="#clickHostToggle" selected="true" text="Host">
               <toggleGroup>
                  <ToggleGroup fx:id="hostJoinGroup" />
               </toggleGroup>
            </ToggleButton>
            <ToggleButton fx:id="joinToggle" layoutX="241.0" layoutY="161.0" mnemonicParsing="false" onAction="#clickJoinToggle" text="Join" toggleGroup="$hostJoinGroup" />
            <TextField fx:id="ipBox" layoutX="168.0" layoutY="201.0" promptText="IP" text="localhost" />
            <TextField fx:id="portBox" layoutX="317.0" layoutY="201.0" prefHeight="25.0" prefWidth="50.0" promptText="Port" text="9999" />
            <Button fx:id="startButton" layoutX="217.0" layoutY="245.0" mnemonicParsing="false" onAction="#clickStartButton" text="Start" />
         </children>
      </Pane>
   </children>
</AnchorPane>
